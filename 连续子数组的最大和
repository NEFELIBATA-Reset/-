import java.util.*;
public class Solution {
    public int FindGreatestSumOfSubArray(int[] array) {
        int sum=0;
        int summax=Integer.MIN_VALUE;
        for(int i=0;i<array.length;i++){
            if(sum<=0){
                sum=array[i];
            }else{
                sum+=array[i];
            }
            if(sum>summax){
                summax=sum;
            }
        }
        return summax;
    }
}
