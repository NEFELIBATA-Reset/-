class Solution {
    public int pivotIndex(int[] nums) {
        if(nums.length==0){
            return -1;
        }
        int sum=0;
        int sumbin=0;
        for(int i=0;i<nums.length;i++){
            sum+=nums[i];
        }
        for(int i=0;i<nums.length;i++){
            if(sumbin*2+nums[i]==sum){
                return i; 
            }
            sumbin+=nums[i];

        }
        return -1;
    }
}
